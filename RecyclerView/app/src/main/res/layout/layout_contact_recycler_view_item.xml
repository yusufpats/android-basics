<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/display_initials_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#00FFFF"
        android:text="YP"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fullname_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:text="Yusuf Patrawala"
        app:layout_constraintBottom_toTopOf="@+id/contact_number_text_view"
        app:layout_constraintLeft_toRightOf="@+id/display_initials_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/display_initials_view" />


    <TextView
        android:id="@+id/contact_number_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="+919876543210"
        app:layout_constraintBottom_toBottomOf="@+id/display_initials_view"
        app:layout_constraintLeft_toRightOf="@+id/display_initials_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname_text_view" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/display_initials_view"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/fullname_text_view"
        android:background="#BCBCBC"/>

</androidx.constraintlayout.widget.ConstraintLayout>